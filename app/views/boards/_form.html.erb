<%= form_with(model: board, local: true, class: "form-container") do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation" class="error-messages">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>
      <ul>
        <% board.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-group">
    <%= form.label :user, 'User Email', class: "form-label" %>
    <%= form.text_field :user, class: "form-input" %>
  </div>

  <div class="field-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="field-group">
    <%= form.label :width, class: "form-label" %>
    <%= form.number_field :width, class: "form-input" %>
  </div>

  <div class="field-group">
    <%= form.label :height, class: "form-label" %>
    <%= form.number_field :height, class: "form-input" %>
  </div>

  <div class="field-group">
    <%= form.label :number_of_mine, class: "form-label" %>
    <%= form.number_field :number_of_mine, class: "form-input" %>
  </div>

  <div class="actions">
    <%= form.submit "Save Board", class: "form-button" %>
  </div>
<% end %>
