<table class="styled-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>User</th>
      <th>Dimensions</th>
      <th>Mines</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= link_to board.name, board_path(board) %></td> 
        <td><%= board.user&.email || "N/A" %></td>
        <td><%= "#{board.width} x #{board.height}" %></td>
        <td><%= board.number_of_mine %></td>
        <td><%= board.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
